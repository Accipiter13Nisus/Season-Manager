        // --- CHART & DOM REFERENCES ---
        let myChart; // Global chart instance
        const ctx = document.getElementById('weather-chart').getContext('2d');
        
        const regionSelect = document.getElementById('region-select');
        const seasonSelect = document.getElementById('season-select');
        const partSelect = document.getElementById('part-select');
        const realWorldInfo = document.getElementById('real-world-info');
        const tableBody = document.getElementById('weather-table-body');

        // Color palette for the chart
        const chartColors = [
            '#3B82F6', // blue-500
            '#10B981', // emerald-500
            '#F59E0B', // amber-500
            '#EF4444', // red-500
            '#8B5CF6', // violet-500
            '#EC4899', // pink-500
            '#6366F1', // indigo-500
            '#06B6D4', // cyan-500
            '#F97316', // orange-500
            '#84CC16', // lime-500
            '#A855F7', // purple-500
            '#D946EF', // fuchsia-500
        ];

        // --- FUNCTIONS ---

        /**
         * Populates a select element with options
         * @param {HTMLSelectElement} selectElement - The <select> element to populate
         * @param {string[]} options - An array of strings for the options
         */
        function populateSelect(selectElement, options) {
            selectElement.innerHTML = ''; // Clear existing options
            options.forEach(option => {
                const optionElement = document.createElement('option');
                optionElement.value = option;
                optionElement.textContent = option.charAt(0).toUpperCase() + option.slice(1); // Capitalize first letter
                selectElement.appendChild(optionElement);
            });
        }

        /**
         * Populates the season select based on the chosen region
         */
        function handleRegionChange() {
            const selectedRegion = regionSelect.value;
            const seasons = Object.keys(allRegionData[selectedRegion].seasons);
            populateSelect(seasonSelect, seasons);
            // Trigger a change on the season select to update the part select
            handleSeasonChange();
        }

        /**
         * Populates the part select based on the chosen region and season
         */
        function handleSeasonChange() {
            const selectedRegion = regionSelect.value;
            const selectedSeason = seasonSelect.value;
            const parts = Object.keys(allRegionData[selectedRegion].seasons[selectedSeason]);
            populateSelect(partSelect, parts);
            // Trigger an update on the dashboard
            updateDashboard();
        }

        /**
         * Main function to update all dashboard elements
         */
        function updateDashboard() {
            const selectedRegion = regionSelect.value;
            const selectedSeason = seasonSelect.value;
            const selectedPart = partSelect.value;

            // Ensure all data is available before proceeding
            if (!selectedRegion || !selectedSeason || !selectedPart) {
                return;
            }

            const regionData = allRegionData[selectedRegion];
            const weatherData = regionData.seasons[selectedSeason][selectedPart];

            // 1. Update Real-World Info
            realWorldInfo.textContent = regionData.realWorld || 'Unknown';

            // 2. Update Data Table
            tableBody.innerHTML = ''; // Clear table
            weatherData.forEach(item => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-700 transition duration-150 ease-in-out';
                row.innerHTML = `
                    <td class="p-3 text-gray-200 font-medium">${item.name}</td>
                    <td class="p-3 text-gray-200 text-right font-mono">${item.probability}%</td>
                `;
                tableBody.appendChild(row);
            });

            // 3. Update Chart
            const labels = weatherData.map(d => d.name);
            const probabilities = weatherData.map(d => d.probability);

            // Destroy previous chart instance if it exists
            if (myChart) {
                myChart.destroy();
            }

            // Create new chart
            myChart = new Chart(ctx, {
                type: 'doughnut', // 'pie' or 'doughnut'
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Probability %',
                        data: probabilities,
                        backgroundColor: chartColors,
                        borderColor: '#4A5568', // gray-700
                        borderWidth: 2,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                color: '#E2E8F0', // gray-200
                                font: {
                                    size: 14,
                                    family: "'Inter', sans-serif"
                                },
                                padding: 20
                            }
                        },
                        tooltip: {
                            backgroundColor: '#1F2937', // gray-800
                            titleColor: '#E2E8F0', // gray-200
                            bodyColor: '#E2E8F0', // gray-200
                            borderColor: '#4A5568', // gray-700
                            borderWidth: 1,
                            padding: 12,
                            cornerRadius: 8,
                            titleFont: {
                                size: 16,
                                weight: 'bold'
                            },
                            bodyFont: {
                                size: 14
                            },
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += context.parsed + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    cutout: '60%' // Adjust for doughnut hole size
                }
            });
        }

        // --- INITIALIZATION ---
        
        document.addEventListener('DOMContentLoaded', () => {
            // Add event listeners
            regionSelect.addEventListener('change', handleRegionChange);
            seasonSelect.addEventListener('change', handleSeasonChange);
            partSelect.addEventListener('change', updateDashboard);

            // Initial population
            const regions = Object.keys(allRegionData);
            populateSelect(regionSelect, regions);
            
            // Trigger the first load
            handleRegionChange();
        });

    </script>
</body>
</html>



