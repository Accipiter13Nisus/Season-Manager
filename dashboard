                        "mid": [{"name": "SUNNY", "probability": 20}, {"name": "HIGHPRESSURE", "probability": 15}, {"name": "CLOUDS", "probability": 25}, {"name": "MISTY", "probability": 10}, {"name": "FOG", "probability": 5}, {"name": "OVERCAST", "probability": 15}, {"name": "RAIN", "probability": 5}, {"name": "SLEET", "probability": 2}, {"name": "SNOWLIGHT", "probability": 3}],
                        "late": [{"name": "SUNNY", "probability": 25}, {"name": "HIGHPRESSURE", "probability": 20}, {"name": "CLOUDS", "probability": 20}, {"name": "MISTY", "probability": 5}, {"name": "OVERCAST", "probability": 15}, {"name": "RAIN", "probability": 10}, {"name": "SLEET", "probability": 3}, {"name": "SNOWLIGHT", "probability": 2}]
                    }
                }
